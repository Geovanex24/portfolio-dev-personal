---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Card from '../components/Card.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import MailIcon from '../components/icons/Mail.astro';
import SocialPill from '../components/SocialPill.astro';
import Experience from '../components/Experience.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro'
---

<Layout 
	title="Geovanni Fernandez - Software Engineer with 3 Years of Experience in Full-Stack Web Development"
	description="This is my portfolio website. Here you can find my projects, my resume and my contact information."
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-32">
			<img class="rounded-full size-12 mb-4" src="https://media.licdn.com/dms/image/C4E03AQG0yTg5u2yulA/profile-displayphoto-shrink_800_800/0/1651074265353?e=1726099200&v=beta&t=gS8klpOhmeZJGxAs8TPwNRbf6BvyRFAkHQhK6xMsS-A" alt="Geovanni Fernandez photo">

			<h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex gap-x-4 pb-6 lg:pb-10"> 
				Geovanni Fernández<a
					href="https://www.linkedin.com/in/gfernandezel" 
					target="_blank" 
					rel="noopener" 
					class="flex justify-center items-center"><Badge>Open to Work</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-[700px]">
				<span>+3 años de experiencia.</span> <span class=" text-yellow-200/90"> Desarrolador y Programador Web.</span> <span class="text-red-200/90"> De Alajuela, Costa Rica.</span>
				<span class="opacity-80"> Especializado en crear aplicaciones únicas. </span>
			</h2>
		
			<nav class="flex gap-4 mt-8 flex-wrap">	
				<SocialPill href="https://www.linkedin.com/in/gfernandezel">
					<LinkedInIcon class="size-4 md:size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Geovanex24">
					<GitHubIcon class="size-4 md:size-6"/>
					GitHub
				</SocialPill>
				<SocialPill href="mailto:geovanexn99@gmail.com">
					<MailIcon class="size-4 md:size-6"/>
					geovanexn99@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experience">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7"/>
				Work Experience
			</h2>
			<Experience />
		</SectionContainer>
		<SectionContainer id="projects">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7"/>
				Projects
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>


